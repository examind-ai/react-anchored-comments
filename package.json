{
  "name": "react-anchored-comments-monorepo",
  "private": true,
  "scripts": {
    "build": "npm run build --workspace react-anchored-comments",
    "dev": "concurrently \"npm run dev:core\" \"npm run dev:demo\"",
    "dev:core": "npm run dev --workspace react-anchored-comments",
    "dev:demo": "npm run dev --workspace demo",
    "format": "prettier --write \"**/*.{ts,tsx,css,json,md}\""
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "prettier": "^3.3.3"
  },
  "workspaces": [
    "packages/*",
    "demo"
  ]
}
